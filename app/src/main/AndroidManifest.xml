<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stone.customview" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ExpandableListViewActivity"
            android:label="@string/title_activity_expandable_list_view" />
        <activity
            android:name=".MyExpLvActivity"
            android:label="扩展的ExpandableListView" />
        <activity
            android:name=".ContactsActivity"
            android:label="@string/title_activity_contacts" />
        <activity
            android:name=".PuzzleActivity"
            android:label="@string/PuzzleActivity" />
        <activity
            android:name=".PuzzleActivity2"
            android:label="@string/PuzzleActivity" />
        <activity
            android:name=".TestCanvasActivity"
            android:label="@string/title_activity_test_view" >
        </activity>
    </application>

</manifest>
